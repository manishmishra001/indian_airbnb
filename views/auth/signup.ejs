<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Create Account</title>
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
  <script src="https://cdn.tailwindcss.com"></script>
  <style>
    body { font-family: 'Inter', sans-serif; }
  </style>
</head>
<body class="bg-gray-800 min-h-screen flex items-center justify-center py-12">
  <main class="bg-gray-900 p-8 rounded-xl shadow-2xl max-w-lg w-full border border-gray-700">
    <form action="/signup" method="POST" class="space-y-6 w-full">
      <h2 class="text-3xl font-bold text-white text-center mb-6">Create Account</h2>

      <% if (errors.length > 0) { %>
        <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
          <ul class="list-disc list-inside space-y-1">
            <% errors.forEach(error => { %>
              <li><%= error %></li>
            <% }); %>
          </ul>
        </div>
      <% } %>

      <!-- First Name -->
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
          </svg>
        </div>
        <input
          type="text"
          name="firstname"
          value="<%= oldInput.firstname ? oldInput.firstname : '' %>"
          placeholder="First Name"
          class="w-full pl-10 pr-4 py-3 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600 placeholder-gray-400"
          required
        />
      </div>

      <!-- Last Name -->
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 6a3.75 3.75 0 11-7.5 0 3.75 3.75 0 017.5 0zM4.501 20.118a7.5 7.5 0 0114.998 0A17.933 17.933 0 0112 21.75c-2.676 0-5.216-.584-7.499-1.632z" />
          </svg>
        </div>
        <input
          type="text"
          name="lastname"
          value="<%= oldInput.lastname ? oldInput.lastname : '' %>"
          placeholder="Last Name"
          class="w-full pl-10 pr-4 py-3 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600 placeholder-gray-400"
        />
      </div>

      <!-- Email -->
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
            <path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 01-2.25 2.25h-15a2.25 2.25 0 01-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0019.5 4.5h-15a2.25 2.25 0 00-2.25 2.25m19.5 0v.256c0 .546-.328 1.055-.876 1.235a2.25 2.25 0 01-1.332.618H12m-2.25 0L6 11.25..." />
          </svg>
        </div>
        <input
          type="email"
          name="email"
          value="<%= oldInput.email ? oldInput.email : '' %>"
          placeholder="xyz@abc.com"
          class="w-full pl-10 pr-4 py-3 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600 placeholder-gray-400"
          required
        />
      </div>

      <!-- Password -->
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6a3.75 3.75 0 10-7.5 0v4.5..." />
          </svg>
        </div>
        <input
          type="password"
          id="passwordInput"
          name="password"
          placeholder="Enter your Password"
          class="w-full pl-10 pr-12 py-3 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600 placeholder-gray-400"
          required
        />
        <button type="button" id="togglePassword" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-white">
          <!-- Eye Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5..." />
          </svg>
          <!-- Eye Slash Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.477..." />
          </svg>
        </button>
      </div>

      <!-- Confirm Password -->
      <div class="relative">
        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-5 h-5 text-gray-400">
            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 10.5V6a3.75 3.75 0 10-7.5 0v4.5..." />
          </svg>
        </div>
        <input
          type="password"
          id="confirmPasswordInput"
          name="confirmPassword"
          placeholder="Confirm your Password"
          class="w-full pl-10 pr-12 py-3 bg-gray-700 text-white border border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-purple-600 placeholder-gray-400"
          required
        />
        <button type="button" id="toggleConfirmPassword" class="absolute inset-y-0 right-0 pr-3 flex items-center text-gray-400 hover:text-white">
          <!-- Eye Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.458 12C3.732 7.943 7.523 5 12 5..." />
          </svg>
          <!-- Eye Slash Icon -->
          <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 hidden" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.477..." />
          </svg>
        </button>
      </div>

      <!-- User Type -->
      <div class="flex flex-col space-y-4 md:flex-row md:space-y-0 md:space-x-10 items-center justify-center">
        <p class="text-gray-400">Select User Type:</p>
        <div class="flex space-x-6">
          <label class="flex items-center text-white cursor-pointer">
            <input type="radio" name="usertype" value="guest" class="form-radio h-4 w-4 text-purple-600" checked />
            <span class="ml-2">Guest</span>
          </label>
          <label class="flex items-center text-white cursor-pointer">
            <input type="radio" name="usertype" value="host" class="form-radio h-4 w-4 text-purple-600" />
            <span class="ml-2">Host</span>
          </label>
        </div>
      </div>

      <!-- Terms -->
      <div class="flex items-center space-x-2">
        <input type="checkbox" name="terms" required class="form-checkbox h-4 w-4 text-purple-600 rounded" />
        <span class="text-gray-400">I agree to the <a href="#" class="text-purple-400 underline hover:no-underline">Terms and Conditions</a></span>
      </div>

      <!-- Submit -->
      <button
        type="submit"
        class="w-full bg-purple-600 text-white py-3 rounded-lg font-bold hover:bg-purple-700 transition duration-300"
      >
        Register
      </button>
    </form>
  </main>

  <script>
    document.addEventListener('DOMContentLoaded', function () {
      function setupToggle(passwordId, toggleId) {
        const input = document.getElementById(passwordId);
        const toggle = document.getElementById(toggleId);

        toggle.addEventListener('click', function () {
          const type = input.getAttribute('type') === 'password' ? 'text' : 'password';
          input.setAttribute('type', type);

          // Switch icons
          toggle.querySelectorAll('svg').forEach(svg => svg.classList.toggle('hidden'));
        });
      }

      setupToggle('passwordInput', 'togglePassword');
      setupToggle('confirmPasswordInput', 'toggleConfirmPassword');
    });
  </script>
</body>
</html>
