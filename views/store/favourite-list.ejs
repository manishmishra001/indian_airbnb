<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
</head>
<body class="bg-gray-800 min-h-screen">
    <%- include('../partials/nav') %>
    <main class="container mx-auto mt-10 sm:mt-16 md:mt-20 p-4 sm:p-6 md:p-8 font-inter">
        <h2 class="text-3xl sm:text-4xl text-white font-bold text-center mb-6 sm:mb-8 md:mb-10">
            Your Favourites
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
            <% favouriteHomes.forEach(homes => { %>
                <div class="bg-gray-900 rounded-xl shadow-xl overflow-hidden hover:shadow-2xl transition duration-300 transform hover:scale-105">
                    <img src="<%= homes.photo %>" alt="<%= homes.houseName %>" class="w-full h-48 sm:h-56 object-cover">
                    <div class="p-4 sm:p-6">
                        <h3 class="text-xl sm:text-2xl font-semibold text-white mb-2"><%= homes.houseName %></h3>
                        <p class="text-gray-400 mb-4 flex items-center text-sm sm:text-base">
                            <i class="fas fa-map-marker-alt mr-2 text-purple-400"></i>
                            <%= homes.location %>
                        </p>
                        <div class="flex justify-between items-center mb-4">
                            <span class="text-lg sm:text-xl font-bold text-purple-400">Rs<%= homes.price %> / night</span>
                            <div class="flex items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5 sm:w-6 sm:h-6 text-yellow-400 mr-1">
                                    <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.007 5.404.433c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.433 2.082-5.006z" clip-rule="evenodd" />
                                </svg>
                                <span class="text-gray-300 font-semibold text-sm sm:text-lg"><%= homes.rating %></span>
                            </div>
                        </div>
                        <form action="/favourites/delete/<%= homes._id %>" method="POST">
                            <button class="w-full bg-red-600 text-white py-2 sm:py-3 rounded-lg font-bold hover:bg-red-700 transition duration-300" type="submit">
                                Remove from Favourites
                            </button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>
        
        <% if (favouriteHomes.length === 0) { %>
            <div class="mt-8 sm:mt-12 md:mt-16 p-6 sm:p-8 bg-gray-900 border border-gray-700 rounded-lg shadow-xl max-w-sm sm:max-w-md md:max-w-xl mx-auto text-center">
                <p class="text-gray-300 text-base sm:text-lg mb-4">You don't have any favourite homes yet.</p>
                <a href="/explore" class="inline-block bg-purple-600 text-white py-2 sm:py-3 px-6 sm:px-8 rounded-lg font-bold hover:bg-purple-700 transition duration-300 text-sm sm:text-base">
                    Start Exploring
                </a>
            </div>
        <% } %>
    </main>
</body>
</html>